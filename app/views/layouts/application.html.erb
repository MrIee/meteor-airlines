<!DOCTYPE html>
<html>
<head>
  <title>MeteorAirlines</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="bg">
  </div>
    <nav>
      <% if @current_user.present? %>
       <h2>Logged in as <%= @current_user.try(:name) %>
       <% end %> </h2>
        <%= link_to("Home", "/search") %>
        <% if @current_user && @current_user.admin? %>
          <%= link_to('Show users', users_path) %>
        <% end %>
        <% if @current_user.present? %>
          <%= link_to('Show flights', flights_path) %>
          <%= link_to("Logout", "/login", :rel => "nofollow", "data-method" => "delete") %>
        <% end %>
    </nav>

    <div class="container">
        <%= yield %>
    </div>


</body>
</html>